                android:onClick="methodeDropDown"
                android:text="Age du conducteur"
                android:textColor="@color/colorTextnodescriptionCdGenaral"
                android:textSize="@dimen/txt_size_titre" />

            <TextView
                android:id="@+id/def_age"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/layout_margin_txt"
