                android:layout_height="wrap_content"
                android:layout_margin="@dimen/layout_margin_txt"
                android:text="Assurance vol et dommages"
                android:textColor="@color/colorTextnodescriptionCdGenaral"
                android:textSize="@dimen/txt_size_titre" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/layout_margin_txt"
