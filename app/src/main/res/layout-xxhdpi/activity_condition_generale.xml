                android:layout_height="wrap_content"
                android:layout_margin="6dp"
                android:background="#EEE"
                android:inputType="textMultiLine"
                android:text="@string/caution"
                android:textSize="@dimen/txt_size_def"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/layout_margin_txt"
                android:text="Condition générales"
                android:textColor="@color/colorTextnodescriptionCdGenaral"
                android:textSize="@dimen/txt_size_titre" />
