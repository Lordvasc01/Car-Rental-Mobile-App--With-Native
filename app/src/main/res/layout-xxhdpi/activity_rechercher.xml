<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mon_menu"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >


    <LinearLayout
        android:id="@+id/layout_m"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#EEE"
        android:orientation="vertical"
        android:padding="@dimen/padding_recherche">
        <!--Message ...... Erreur-->
        <TextView
            android:id="@+id/txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_warning_black_24dp"
            android:drawablePadding="@dimen/drawablePadding_txt_Attention"
            android:text="@string/txt_retoureraumeme"
            android:textColor="@color/rouge"
            android:textSize="@dimen/txt_size_Attention" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/layout_marginTop_txt_choisser"
            android:drawableLeft="@drawable/ic_notepad"
            android:background="@drawable/border_style_width"
            android:drawablePadding="@dimen/drawablePadding_txt_choisser"
            android:text="@string/choisissez_l_heure"
            android:textSize="@dimen/txt_size_Attention" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/blanc_cc"
                android:orientation="vertical"
                android:padding="@dimen/padding_lin_item1">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/layout_marginBottom_txt_item"
                    android:gravity="center"
                    android:text="Départ"
                    android:textSize="@dimen/txt_item_size" />

                <TextView
                    android:id="@+id/txt_datedepart_recherche"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_date_range_black_24dp"
                    android:text="2018-03-14" />

                <TextView
                    android:id="@+id/txt_houredepart_recherche"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/layout_marginTop_txt_heure"
                    android:drawableLeft="@drawable/ic_access_alarm_black_24dp"
                    android:text="12:00" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/layout_marginLeft_item2_activity_reche"
                android:layout_weight="1"
                android:background="@color/blanc_cc"
                android:orientation="vertical"
                android:padding="@dimen/padding_lin_item1">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/layout_marginBottom_txt_item"
                    android:gravity="center"
                    android:text="Arrivé"
                    android:textSize="@dimen/txt_item_size" />

                <TextView
                    android:id="@+id/txt_datearrive_recherche"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_date_range_black_24dp"
                    android:text="2018-03-14" />

                <TextView
                    android:id="@+id/txt_hourearrive_recherche"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/layout_marginTop_txt_heure"
                    android:drawableLeft="@drawable/ic_access_alarm_black_24dp"
                    android:text="12:00" />
            </LinearLayout>
        </LinearLayout>
        <CheckBox
            android:id="@+id/check_avec_conducteur"
            android:layout_margin="@dimen/layout_margin_checkConducteur"
            android:layout_width="wrap_content"
            android:text="Avec Conducteur"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/btn_rechercher_recherchevoiture"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableRight="@drawable/recherche_icon_noire"
            android:text="@string/txt_recherchervoiture" />
    </LinearLayout>

</LinearLayout>
