<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/longeur_item"
        android:background="#EEE"
        android:orientation="vertical"
        android:paddingLeft="8dp"
        android:paddingTop="10dp">

        <view
            android:layout_width="match_parent"
            android:layout_height="0.01pt" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="3">

            <TextView
                android:id="@+id/txt_nom_voiture_listview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:inputType="textMultiLine"
                android:text="Mercedecs 220 classic"
                android:textColor="@color/noirefaible"
                android:textSize="@dimen/size_titre" />

            <TextView
                android:id="@+id/btn_detail_listview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/btn_detail_mgleft"
                android:layout_weight="1"
                android:background="@drawable/stylebtn"
                android:drawableRight="@drawable/ic_keyboard_arrow_right_black_24dp"
                android:paddingLeft="@dimen/btn_detail_padleft"
                android:text="Détails"
                android:textColor="@color/noirefaible" />
        </LinearLayout>

        <TextView
            android:id="@+id/txt_occupe_listview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_check_black_24dp"
            android:drawablePadding="5dp"
            android:text="reservé"
            android:textColor="@color/vert"
            android:textSize="@dimen/txt_size_reserve_non"
            android:textStyle="bold|italic" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/layout_marginTop_content"
            android:orientation="horizontal"
            android:paddingTop="@dimen/paddingTop_content"
            android:weightSum="2">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/layout_marginLeft_item1_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txt_nb_personne_listview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margTop_item1_ele1"
                    android:drawableLeft="@drawable/ic_person_black_24dp"
                    android:drawablePadding="5dp"
                    android:text="5 passager(s)"
                    android:textColor="@color/noirefaible" />

                <TextView
                    android:id="@+id/txt_nb_porte_listview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margTop_item1_ele1"
                    android:drawableLeft="@drawable/ic_car"
                    android:drawablePadding="5dp"
                    android:text="5 port(s)"
                    android:textColor="@color/noirefaible" />

                <TextView
                    android:id="@+id/txt_typecarburant_listview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="@dimen/margTop_item1_ele1"
                    android:drawableLeft="@drawable/ic_fuel_service"
                    android:drawablePadding="5dp"
                    android:text="essance"
                    android:textColor="@color/noirefaible" />

                <TextView
                    android:id="@+id/txt_manuele_listview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="@dimen/margTop_item1_ele1"
                    android:drawableLeft="@drawable/ic_transmision"
                    android:drawablePadding="5dp"
                    android:text="Manuele"
                    android:textColor="@color/noirefaible" />

                <TextView
                    android:id="@+id/txt_note_voiture"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:background="@drawable/stylebtn"
                    android:drawableLeft="@drawable/ic_star_black_24dp"
                    android:drawablePadding="5dp"
                    android:text="Note:6/10" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/layout_marginLeft_item2"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/img_voiture_listeview"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/layout_height_image_voiture"
                    android:layout_marginRight="@dimen/layout_marginRight_image_voiture" />

                <TextView
                    android:id="@+id/txt_prix_listview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginRight="@dimen/layout_marginRight_txt_prix"
                    android:layout_marginTop="@dimen/layout_marginTop_txt_prix"
                    android:text="150,15 DH /jour"
                    android:textColor="@color/noirefaible"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginRight="@dimen/layout_marginRight_txt_prixTotale"
                    android:layout_marginTop="@dimen/layout_marginTop_txt_prixTotale"
                    android:drawableLeft="@drawable/ic_price"
                    android:drawablePadding="5dp"
                    android:text="Prix total" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>